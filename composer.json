{
	"name": "road42/journey-journal",
	"version": "0.0.1",
	"description": "Kirby plugin dedicated to sharing journeys.",
	"homepage": "https://github.com/road42/journey-journal",
	"license": "MIT",
	"type": "kirby-plugin",
	"keywords": [
    	"kirby",
    	"kirby-plugin"
  	],
	"authors": [
		{
			"name": "Christoph Jahn",
			"email": "cj@road42.de",
			"homepage": "https://road42.de"
		}
	],
	"require": {
		"getkirby/composer-installer": "^1.2",
		"php": ">=8.2.0",
		"sylvainjule/locator": "^2.0",
		"hananils/kirby-colors": "^1.7",
    	"mauricerenck/komments": "^3.1"
	},
	"require-dev": {
		"getkirby/cms": "^5"
	},
	"config": {
		"optimize-autoloader": true,
		"allow-plugins": {
			"getkirby/composer-installer": true
		}
	},
	"scripts": {
        "test": "vendor/bin/phpunit --testdox --colors=always",
        "build-test-package": "git archive HEAD -o journeyjournal.zip --worktree-attributes",
        "build-composer": "composer install --no-dev --optimize-autoloader",
        "build-release": [
            "composer install --no-dev --optimize-autoloader",
            "npm run build"
        ]
    }
}